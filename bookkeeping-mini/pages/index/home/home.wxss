/* pages/index/home/home.wxss */

.parent {
  font-size: 32rpx;
  position: relative;
  width: 98%;
  margin: 0 auto;
}

.content {
  height: 100%;
  position: relative;
  padding: 0 5px;
}





.panel {
  position: relative;
  border-radius: 10px;
  height: 300rpx;
  color: black;
  background-color: #FFD700;
}


.all-serach {
  position: absolute;
  right: 40rpx;
  bottom: 25rpx;
}


/* 本月收入样式 */
.income {
  padding: 25rpx 0rpx 0rpx 20rpx;
}

/* 本月收入金额样式 */
.income_money {
  font-weight: 600;
  font-size: 55rpx;
  padding: 25rpx 0rpx 0rpx 25rpx;
}

/* 支出样式 */
.expenditure {
  padding: 25rpx 0rpx 0rpx 20rpx;
}


.panel-data {
  font-size: 35rpx;
  position: absolute;
  right: 10rpx;
  top: 40rpx;
}


.tabs {
  height: 100%;
}


.cell-image {
  margin-right: 16px;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}


.cell-remark {
  font-size: 25rpx;
  color: gray;
  position: absolute;
  /* left: 13vh; */
  /* bottom: 0; */
}

.tabs-title {
  position: sticky;
  top: 0px;
  z-index: 100;
  background: white;
}

/* 全部收入支出字体样式 */
.tabs-title-label {
  margin: 0 10rpx;
  display: inline-block;
}

/* 全部收入支出字体高亮样式 */
.tabs-title-label-weight {
  border-bottom: 2rpx solid #FFD700;
  font-size: 40rpx;
}

/* 日期类型下拉选 */
.container {
  display: inline-block;
}





/* 弹出层样式 */
.book-popup-page {
  position: relative;
  overflow: auto;
  width: 100%;
  height: 100%;
  background: #ffffff;
  /* opacity: 0.5; */
}

.book-popup-for {
  position: relative;
  height: 16vh;
  background-color: white;
  width: 90%;
  margin: 2vh auto;
  border-radius: 5%;
  filter: progid:DXImageTransform.Microsoft.Shadow(color=#e6e6e6, direction=120, strength=4);
  -moz-box-shadow: 2px 2px 10px #e6e6e6;
  -webkit-box-shadow: 2px 2px 10px #e6e6e6;
  box-shadow: 2px 2px 10px #e6e6e6;
}

.book-name {
  padding: 25rpx;
}

/*当前选择账本与默认账本公共样式  */
.book-tag {
  font-size: 25rpx;
  border-radius: 15%;
  padding: 6rpx;
  margin-left: 10rpx;

}

/* 当前选择账本 */
.book-select {
  color: #4df147;
  border: 1rpx solid #4df147;
}

/* 默认账本 */
.book-default {
  color: #FFD700;
  border: 1rpx solid #FFD700;
}

.book-setting {
  position: absolute;
  right: 25rpx;
  top: 25rpx;
}


.money-common {
  font-size: 38rpx;
  height: 10vh;
  border-bottom: 1px solid #dedede;
  margin: 0 auto;
  text-align: center;
  line-height: 10vh;
}


.money-delete {

  color: red;
}

.money-return {
  color: color;
}




/* ===================编辑账单金额纪录表单弹出css=================== */
/*button*/
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 210px;
  overflow-y: scroll;
  /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
  color: #3CC51F;
  background-color: #FFD700;
}

.top {
  padding-top: 8px;
}

.bottom {
  padding-bottom: 8px;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h40 {
  height: 30px;
  line-height: 30px;
}

.input_h70 {
  height: 60px;
}

.input_view {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
  line-height: 30px;
}

input {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}


/* 结余 */
.income_money_balance {
  font-size: 16px;
  display: inline-block;
}


/* 筛选向右浮动 */
.tabs-title-label-right {
  float: right;
}