.btn-text {
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
}

.only-btn {
  border-radius: 30rpx !important;
}

.select {
  background-color: #FFD700;
  color: #ffffff;
  border-color: #FFD700;
}

