.showItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  /* padding: 20rpx; */
  /* height: 106rpx; */
}

.showItem .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #242424;
}

.showItem .content {
  display: flex;
  align-items: center;
}

.showItem .content text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #000;
}

.showItem .content text.jiantou {
  margin-left: 30rpx;
  color: #ccc;
}

.showItem .content text.jiantou::before {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
  transform: matrix(.71, .71, -.71, .71, 0, 0);
  position: relative;
  top: -2px;
  /* position: absolute; */
  top: 50%;
  /* right: 15px; */
  margin-top: -4px;
  border-top-width: 2px;
  border-right-width: 2px;
  border-bottom-width: 0px;
  border-left-width: 0px;
  border-top-color: rgb(200, 200, 205);
  border-right-color: rgb(200, 200, 205);
  border-bottom-color: rgb(200, 200, 205);
  border-left-color: rgb(200, 200, 205);
  border-top-style: solid;
  border-right-style: solid;
  border-bottom-style: solid;
  border-left-style: solid;
}

.showItem .content .placeholder {
  color: #ccc;
}

.select {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column-reverse;
}

.select .select_box {
  width: 100%;
  height: 720rpx;
  background: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
}

.select .select_title {
  padding: 0 15px;
  font-size: 14px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #242424;
  height: 60rpx;
  border-bottom: 1rpx solid #EBEBEB;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.select_title-comfirm {
  float: right;
  color: #009241
}

.select .select_search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.select .select_search .searchIpt {
  position: relative;
  width: 593rpx;
  height: 56rpx;
  background: #F2F3F5;
  border-radius: 28rpx;
}

.select .select_search .searchIpt input {
  height: 100%;
  padding-left: 34rpx;
  text-align: left;
}

.select .select_search .searchIpt .placlass {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #CCCCCC;
}

.select .select_search .searchIpt .select_clear {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 999;
}

.select .select_search .searchBtn {
  width: 56rpx;
  height: 56rpx;
}

.select .select_search .searchBtn image {
  width: 100%;
  height: 100%;
}

.select .ul {
  padding: 0 50rpx;
}

.select .ul .li {
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;

  width: 90%;

  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #666666;
}

.select .ul .active {
  color: #009241 !important;
  border: 1rpx solid #009241;
  border-left-color: transparent;
  border-right-color: transparent;
  box-sizing: border-box;
}