.select-box {
  position: relative;
  width: 100%;
  height: 100%;
  font-size: 30rpx;

}

.select-current {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0 10rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.select-current::after {

  position: absolute;

  display: block;

  right: 40rpx;

  top: 30rpx;

  content: '';

  width: 0;

  height: 0;

  border: 10rpx solid transparent;

  border-top: 10rpx solid #999;

}

.current-name {
  display: block;
  width: 85%;
  height: 100%;
  word-wrap: normal;
  overflow: hidden;

}

.option-list {
  font-size: 25rpx;
  position: absolute;
  left: 0;
  top: 50rpx;
  width: 100rpx;
  text-align: center;
  padding: 12rpx 20rpx 10rpx 20rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  z-index: 999;
  background-color: #fff;

}

.option {
  display: block;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  height: 50rpx;
}

.option:last-child {

  border-bottom: none;

  padding-bottom: 0;

}